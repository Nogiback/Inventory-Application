extends layout

block content
  h1= title
  if discList.length
    ul.list-group.mb-5
      each disc in discList
        li.list-group-item.d-flex.justify-content-between.align-items-center.bg-dark
          a(href=disc.url) #{disc.plastic} #{disc.name} (#{disc.manufacturer.name}) - $#{disc.price}
          span.badge.badge-primary.badge-pill #{disc.stock}
  else
    p There are no discs.